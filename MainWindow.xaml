<Window x:Class="P04WeatherForecastAPI.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P04WeatherForecastAPI.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="700">
    <DockPanel>
        <StackPanel Width="150" DockPanel.Dock="Left" Margin="10">
            <Label Content="City:" ></Label>
            <TextBox x:Name="txtCity"></TextBox>
            <Button x:Name="btnSearch" Content="Search" Click="btnSearch_Click"></Button>
            <ListBox x:Name="lbData" DisplayMemberPath="LocalizedName" SelectionChanged="lbData_SelectionChanged"></ListBox> 
            <Button x:Name="btnGCC" Margin="0,10,0,0" Content="Get Current conditions" Click="btnGet_Current_Conditions"></Button>
            <Button x:Name="btnODF" Margin="0,10,0,0" Content="Get One Day Forecast" Click="btnGet_One_Day_Forecast"></Button>
            <Button x:Name="btnFDF" Margin="0,10,0,0" Content="Get Five Days Forecast" Click="btnGet_Five_Days_Forecast"></Button>              
        </StackPanel>
        <StackPanel>
            <TextBox x:Name="txtResults" Width="400" Height="500" TextWrapping="Wrap"></TextBox>
        </StackPanel>
    </DockPanel>
</Window>
